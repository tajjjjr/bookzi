{
  "name": "bookzi-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "mock": "tsx ./scripts/dev/mock.adapter.ts",
    "sqlite": "tsx ./scripts/dev/sqlite.adapter.ts",
